<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneradorQR">

    <EditText
        android:id="@+id/et_texto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Texto a generar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/imagen_generadorQR"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/et_texto"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"/>

    <Button
        android:id="@+id/btn_generarQR"
        android:layout_width="371dp"
        android:layout_height="62dp"
        android:layout_below="@id/imagen_generadorQR"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Generar QR" />


</RelativeLayout>