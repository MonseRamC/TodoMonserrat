<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_camara"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:text="Camara" />

        <Button
            android:id="@+id/btn_lectorQR"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_below="@id/btn_camara"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:text="Lector QR" />

        <Button
            android:id="@+id/btn_generadorQR"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_below="@id/btn_lectorQR"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:text="Generador QR" />

        <Button
            android:id="@+id/btn_hubicacion"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_below="@id/btn_generadorQR"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:text="Ubicacion GPS" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>